{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "@/config/*": ["src/config/*"],
      "@/controller/*": ["src/modules/controller/*"],
      "@/services/*": ["src/modules/services/*"],
      "@/domain/*": ["src/modules/domain/*"],
      "@/modules/*": ["src/modules/*"],
      "@/infrastructure/*": ["src/infrastructure/*"],
      "@/repositories/*": ["src/modules/domain/repositories/*"],
      "@/mapper/*": ["src/modules/mapper/*"],
      "@/database/*": ["src/infrastructure/database/*"],
      "@/entities/*": ["src/infrastructure/database/sql-server/*"],
      "@/schema/*": ["src/infrastructure/database/mongoodb/*"],
      "@/dto/*": ["src/modules/domain/dto/*"]
    }
  }
}
